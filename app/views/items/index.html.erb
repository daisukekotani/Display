<h1>item index</h1>
<%= link_to '新規投稿', new_item_path %>

<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-lg-4">
        <p>
          <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, :fill, 190,  250, format: 'jpeg' %>
          <% end %>
        </p>
        <p><%= item.name %></p>
      </div>
    <% end %>
  </div>
</div>

